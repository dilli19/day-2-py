def maximum_number_of_words(sentences):
    max_words = 0
    for sentence in sentences:
        print (sentence)
        num_words = len(sentence.split())
        
        max_words = max(max_words, num_words)
    return max_words

sentences = input("Enter sentences : ").split(',')
print(sentences)
print("The maximum number of words in a single sentence is:", maximum_number_of_words(sentences))
